    <script>
        function abrirMenu() {
            document.getElementById("sidebar").classList.add("activo");
            document.body.classList.add("menu-abierto");
        }

        function cerrarMenu() {
            document.getElementById("sidebar").classList.remove("activo");
            document.body.classList.remove("menu-abierto");
